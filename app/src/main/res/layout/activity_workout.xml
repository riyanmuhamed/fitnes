<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/design_default_color_secondary_variant"
            android:title="Workout Programs"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

        <!-- Available Workout Programs -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Workout Programs"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- Workout Program 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/textView_workoutTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Body Workout"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_workoutDescription1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A comprehensive workout targeting all major muscle groups."
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Workout Program 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/textView_workoutTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardio Blast"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_workoutDescription2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High-intensity interval training to get your heart pumping."
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Workout Program 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/textView_workoutTitle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strength Training"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_workoutDescription3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Focus on building muscle strength and endurance."
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Add more workout programs here -->

    </LinearLayout>
</ScrollView>
